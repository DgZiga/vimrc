set number "                        display line numbers
set laststatus=2 "                  always display status line
let g:netrw_banner=0 "              lose netrw annoying banner
let g:netrw_liststyle=3 "           tree-style netrw
set ruler "                         display current col
set cursorline "                    line beneath current row
nnoremap gb :ls<CR>:b<Space> "      gb to display a list of all buffers
set noswapfile "                    no .swp
set nobackup "                      no backup
set nowritebackup "                 no backup
nnoremap <C-Left> :tabprevious<CR> "Ctrl+Left is :tabp
nnoremap <C-Right> :tabnext<CR> "   Ctrl+Right is :tabn
